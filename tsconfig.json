{
  "compilerOptions": {
    "target": "es2015",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "@Services/*": ["./ts/Services/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}